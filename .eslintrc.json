{
    "env": {
        "browser": false,
        "es6": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "space-before-function-paren": ["error", "never"],
        "consistent-return": [0],
        "max-len": ["error", 120, 2, {
          "ignoreUrls": true,
          "ignoreComments": false,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }],
        "no-console": ["error", {
          "allow": ["info", "warn", "error"]
        }],
        "no-param-reassign": 0,
        "no-underscore-dangle": [0],
        "object-curly-newline": ["error", {
          "ObjectPattern": "never"
        }],
        "semi": [2, "never"]
    }
}
